mixin text-field(option)

  .text-field

    if option.title
      .text-field__title-wrap
        .text-field__title= option.title
        if option.state
          .text-field__state= option.state
    
    input(
      id = ((option.isMasked) ? "masked-text-field__input" : null)
      class = "text-field__input"
      placeholder = option.placeholder
    )