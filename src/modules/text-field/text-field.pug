mixin text-field({title, state, placeholder, value, isMasked, isPassword})
  .text-field
    if title
      .text-field__title-wrap
        .text-field__title= title
        if state
          .text-field__state= state
    input(
      id = ((isMasked) ? "masked-text-field__input" : null)
      type = ((isPassword) ? "password" : text)
      class = "text-field__input"
      placeholder = placeholder
      value = value
    )