mixin review({title, users})
  .review
    -if (title)
      .review__title= title
    
    -for (let user of users)
      .review__user
        .review__user-info
          img.review__user-photo(src= user.photo alt="photo")
          .review__user-name= user.name
          .review__time-passed= user.date
        .review__user-text-wrap
          .review__like-button-wrap
            +like-button({
              defaultNumber: user.likes
            })
          .review__user-text= user.text