include ../rate/rate.pug

mixin room-card({roomImages, roomNumber, roomType, roomPrice, measurePeriodText, defaultRating, reviewsNumber, measureUnit})
  .room-card
    .room-card__slider
      each image in roomImages
        img.room-card__image(src = image)
        //img.review__user-photo(src= user.photo alt="photo")
    .room-card__caption
      .room-card__rooom-info
        .room-card__room-number= `â„– ${roomNumber}`
        .room-card__room-type= roomType
        .room-card__room-price= roomPrice
        .room-card__measure-period= measurePeriodText
      .room-card__room-reviews-block
        .room-card__room-rating
          +rate({defaultNumber: defaultRating})
        .room-card__reviews
          .room-card__reviews-number= reviewsNumber
          .room-card__measure-unit= measureUnit