mixin date-dropdown({fromFieldTitle, toFieldTitle, placeholder, areFieldsHidden, isCalendarVisible})
  -
    let fieldsClassNames = ["date-dropdown__fields"];
    if (areFieldsHidden) fieldsClassNames.push("date-dropdown__fields_hidden");

  .date-dropdown
    div(class = fieldsClassNames)
      .date-dropdown__from-field-wrap
        .date-dropdown__from-field-title= fromFieldTitle
        .date-dropdown__from-field-label
          input(class = "date-dropdown__from-field" placeholder= placeholder value = "")
          .date-dropdown__from-field-arrow
            i.material-icons expand_more
      .date-dropdown__to-field-wrap
        .date-dropdown__to-field-title= toFieldTitle
        .date-dropdown__to-field-label
          input(class = "date-dropdown__to-field" placeholder= placeholder value = "")
          .date-dropdown__to-field-arrow
            i.material-icons expand_more
    
    .date-dropdown__calendar(data-is-visible = `${isCalendarVisible}`)
    //- (data-is-visible = isCalendarVisible)