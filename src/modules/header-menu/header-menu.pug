mixin header-menu(items)

  nav.header-menu
    button.header-menu__button
      i.material-icons.md-40 blur_on
    ul.header-menu__list
      each item in items
        - const mods = [""]
        if (item.isActive)
          - mods.push("_active")
        if (item.links)
          - mods.push("_dropdown")
          div(class= mods.map(mod => "header-menu__item" + mod))
            .header-menu__item-title= item.name
            ul.header-menu__dropdown
              each link in item.links
                li.header-menu__dropdown-item
                  a.header-menu__dropdown-link(href = link.linkHref)= link.linkName
        else
          li(class= mods.map(mod => "header-menu__item" + mod))
            a.header-menu__link(href = item.href)= item.name