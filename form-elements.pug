doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width")
    meta(name="keywords" value="uikit, fonts, colors, blocks")
    meta(name="description" value="this page contains form elements in all possible conditions")
    title form elements
    link(href="./form-elements.scss" rel="stylesheet")
    //link(href="./node_modules/air-datepicker/dist/css/datepicker.css")
    script(src="./src/js/jquery-in-parcel.js" type="text/javascript" defer) 

    script(src="./node_modules/jquery/dist/jquery.min.js" type="text/javascript" defer)
    //script(src="./node_modules/air-datepicker/dist/js/datepicker.js" type="text/javascript" defer)
    
    //script(src="./blocks/text-field/text-field.js" type="module")
    script(src="./blocks/date-dropdown/date-dropdown.js" type="module")
    script(src="./blocks/filter-date-dropdown/filter-date-dropdown.js" type="module")
    script(src="./blocks/dropdown/dropdown.js" type="module")
    script(src="./blocks/expandable-checkbox-list/expandable-checkbox-list.js" type="text/javascript" defer)
    script(src="./blocks/like-button/like-button.js" type="text/javascript" defer)
    script(src="./blocks/range-slider/range-slider.js" type="module")
    script(src="./blocks/review/review.js" type="module")
    script(src="./blocks/pagination/pagination.js" type="module")
    

  body
    include blocks/logo/logo.pug
    include blocks/text-field/text-field.pug
    include blocks/dropdown/dropdown.pug
    include blocks/date-dropdown/date-dropdown.pug
    include blocks/filter-date-dropdown/filter-date-dropdown.pug
    include blocks/subscription-text-field/subscription-text-field.pug
    include blocks/checkbox/checkbox.pug
    include blocks/expandable-checkbox-list/expandable-checkbox-list.pug
    include blocks/room-info/room-info.pug
    include blocks/radio/radio.pug
    include blocks/toggle/toggle.pug
    include blocks/like-button/like-button.pug
    include blocks/rate/rate.pug
    include blocks/range-slider/range-slider.pug
    include blocks/button/button.pug
    include blocks/pagination/pagination.pug
    include blocks/bullet-list/bullet-list.pug
    include blocks/review/review.pug

    .form-elements

      .form-elements__logo
        +logo({
          color: "grey"
          })

      .form-elements__wrap
        .form-elements__left-section

          .form-elements__text-field
            +text-field({
              title: "text field",
              state: "default",
              placeholder: "Email"
              })

          .form-elements__text-field.form-elements__text-field_hovered-focused
            +text-field({
              title: "text field",
              state: "hover / focus",
              placeholder: "This is pretty awesome"
              })

          .form-elements__dropdown-default-wide
            +dropdown({
              title: "dropdown",
              state: "default",
              content: "guests",
              buttonText: "Сколько гостей",
              isWide: true,
              hasApplyButton: true
              })
          
          .form-elements__masked-text-field
            +text-field({
              title: "masked text field",
              state: "default",
              placeholder: "ДД.ММ.ГГГГ",
              isMasked: true
              })

          .form-elements__date-dropdown
            +date-dropdown({
              fromFieldTitle: "date dropdown",
              toFieldTitle: "date dropdown",
              placeholder: "дд.мм.гггг",
            })
            
          .form-elements__filter-date-dropdown
            +filter-date-dropdown({
              title: "filter date dropdown",
              placeholder: "дд.мм.гггг"
            })

          .form-elements__subscription-text-field
            +subscription-text-field({
              title: "subscription text field",
              action: "",
              type: "email",
              name: "email",
              placeholder: "Email"
            })

          .form-elements__dropdown-default-normal
            +dropdown({
              title: "dropdown",
              state: "default",
              content: "facilities",
              buttonText: "Ваши удобства"
              })

          .form-elements__dropdown-expanded-normal
            +dropdown({
              title: "dropdown",
              state: "expanded",
              content: "facilities",
              buttonText: "Ваши удобства"
              })
              
          .form-elements__expandable-checkbox-list
            +expandable-checkbox-list({
              listTitle: "expandable checkbox list",
              text: [
                "Завтрак",
                "Письменный стол",
                "Стул для кормления",
                "Кроватка",
                "Телевизор",
                "Шампунь"
                ],
            })

          .form-elements__expandable-checkbox-list-expanded
            +expandable-checkbox-list({
              listTitle: "expandable checkbox list",
              text: [
                "Завтрак",
                "Письменный стол",
                "Стул для кормления",
                "Кроватка",
                "Телевизор",
                "Шампунь"
                ],
            })

          .form-elements__room-info
            +room-info({
              features: [
                {img: "insert_emoticon", title: "Комфорт", text: "Шумопоглощающие стены"},
                {img: "location_city", title: "Удобство", text: "Окно в каждой из спален"}
              ]
            })

        .form-elements__middle-section

          +checkbox({
            title: "checkbox buttons",
            text: [
              "Можно курить",
              "Можно с питомцами",
              "Можно пригласить гостей (до&nbsp;10&nbsp;человек)"
            ],
            isRich: false
          })

          .form-elements__radio
            +radio({
              title: "radio buttons",
              name: "gender",
              buttons: [
                {value: "male", text: "Мужчина"},
                {value: "female", text: "Женщина"}
              ]
            })

          .form-elements__toggle
            +toggle({
              title: "toggle",
              buttons: [
                {name: "subscribe", value: "specialOffer", text: "Получать спецпредложения", isChecked: true},
                {name: "subscribe", value: "specialOffer", text: "Получать спецпредложения"}
              ]
            })

          .form-elements__like-buttons
            .form-elements__like-buttons-title like button
            .form-elements__like-buttons-wrap
              +like-button({
                defaultNumber: "2"
              })
              +like-button({
                defaultNumber: "11"
              })

          .form-elements__rate
            .form-elements__rate-title rate button
            .form-elements__rate-wrap
              +rate({
                defaultNumber: "4"
              })
              +rate({
                defaultNumber: "5"
              })

          .form-elements__dropdown-expanded-wide
            +dropdown({
              title: "dropdown",
              state: "",
              content: "guests",
              buttonText: "Сколько гостей",
              isWide: true,
              hasApplyButton: true
            })
          
          .form-elements__rich-checkbox
            +checkbox({
              title: "rich checkbox buttons",
              text: [
                "Широкий коридор",
                "Помощник для инвалидов"],
              isRich: true,
              additionalText: [
                "Ширина коридоров в номере не&nbsp;менее 91 см.",
                "На 1 этаже вас встретит специалист и&nbsp;проводит до номера."
                ]
            })

        .form-elements__right-section
          .form-elements__range-slider
            +range-slider({
              title: "range slider",
              name: "costRange",
              unit: "₽",
              min: "0",
              max: "15000",
              from: "5000",
              to: "10000"
            })

          .form-elements__buttons
            .form-elements__buttons-title buttons
            .form-elements__buttons-first-row
              +button({
                type: "button",
                text: "click me",
                href: "",
                hasVolume: "true",
                isInHeader: "",
                hasBorder: "",
                hasArrow: ""
              })
              +button({
                type: "button",
                text: "click me",
                href: "",
                hasVolume: "true",
                isInHeader: "",
                hasBorder: "",
                hasArrow: ""
              })
            .form-elements__buttons-second-row
              +button({
                type: "button",
                text: "click me",
                href: "",
                hasVolume: "true",
                isInHeader: "",
                hasBorder: "true",
                hasArrow: ""
              })
              +button({
                type: "button",
                text: "click me",
                href: "",
                hasVolume: "true",
                isInHeader: "",
                hasBorder: "true",
                hasArrow: ""
              })
            .form-elements__buttons-third-row
              +button({
                type: "button",
                text: "click me",
                isBig: "",
                hasBorder: "",
                hasArrow: "",
              })
              +button({
                text: "click me",
                isGrey: "true"
              })

            +button({
              type: "button",
              text: "перейти к оплате",
              href: "",
              hasVolume: "true",
              isInHeader: "",
              hasBorder: "",
              hasArrow: "true"
            })

          .form-elements__pagination
            .form-elements__pagination-title pagination
            +pagination({
              areCardsHidden: "true"
            })

          .form-elements__dropdown-expanded-wide-filled
            +dropdown({
              title: "dropdown",
              state: "",
              content: "guests",
              buttonText: "Сколько гостей",
              isWide: true,
              hasApplyButton: true
            })

          .form-elements__bullet-list
            +bullet-list({
              title: "bullet list",
              text: [
                "Нельзя с питомцами",
                "Без вечеринок и мероприятий",
                "Время прибытия — после 13:00, а&nbsp;выезд до 12:00"
              ]
            })

        .form-elements__bottom-section
          +review({
            title: "",
            users: [
              {
              name: "Мурад Сарафанов",
              photo: "./blocks/review/review__photo_name_murad-sarafanov.png",
              text: "Великолепный матрас на кровати в основной спальне! " +
                    "А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. " + 
                    "Выкрикивал комплименты повару — никто не жаловался из соседей.",
              date: "2020-06-20",
              likes: "11"
              }
            ]
          })