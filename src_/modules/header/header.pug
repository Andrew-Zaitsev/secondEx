include ../logo/logo.pug
include ../header-menu/header-menu.pug
include ../button/button.pug

mixin header({headerMenu, isSigned, buttonSignIn, buttonRegister, accountLink})
  .header
    .header__wrap
      .header__logo
        +logo({})
      .header__header-menu
        +header-menu(headerMenu)

      -
        let buttonsClasses = ["header__buttons"];
        let accountLinkClasses = ["header__account-link"];
  
        if (isSigned)
          buttonsClasses.push("header__buttons_hidden");
          
        else
          accountLinkClasses.push("header__account-link_hidden");
    
      div(class = buttonsClasses)
        .header__button-sign-in
          +button(buttonSignIn)
        .header__button-register
          +button(buttonRegister)
        a.header__register-link
          i.material-icons.md-40 person_add
      a(class = accountLinkClasses, href = accountLink.href)
        span.header__account-link-text= accountLink.userName
        .header__account-link-image
          i.material-icons.md-40 person